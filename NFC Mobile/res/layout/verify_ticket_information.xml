<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:paddingLeft="8dip"
	android:paddingRight="8dip" android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/mainbackground"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/txtTicketId"
		    android:layout_width="250dp"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="40dp"
		    android:text="票券編號:"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="#000000" />

		<TextView
		    android:id="@+id/txtTicketTheater"
		    android:layout_width="250dp"
		    android:layout_height="25dp"
		    android:layout_marginTop="10dp"
		    android:text="戲院:"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="#000000" />

		<TextView
		    android:id="@+id/txtTicketMovie"
		    android:layout_width="250dp"
		    android:layout_height="25dp"
		    android:layout_marginTop="10dp"
		    android:text="電影:"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="#000000" />

	    <TextView
	        android:id="@+id/txtTicketDate"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="日期:"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#000000" />

	    <TextView
	        android:id="@+id/txtTicketTime"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="時間:"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#000000" />

		<Button android:text="@string/btnVerifyTicket" 
				android:id="@+id/btnVerifyTicket"				
				android:layout_width="380px"
				android:layout_height="150px" 
				android:textSize="10pt"
				android:textColor="#000000"
				android:layout_marginTop="15dip"				
			/>

	</LinearLayout>

</RelativeLayout>

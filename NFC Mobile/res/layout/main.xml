<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:paddingLeft="8dip"
	android:paddingRight="8dip" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_alignParentTop="true" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:orientation="vertical"
		android:background="@drawable/mainbackground"
		android:gravity="center_horizontal"
		>
		
		<Button 
			android:id="@+id/btnReadTag"
			android:layout_width="0px"
			android:layout_height="50px" 
			android:textSize="10pt"	
			android:layout_marginTop="45dip"	
			android:visibility="invisible"
		/>
			
		<Button android:text="@string/btnAcquireTicket" 
				android:id="@+id/btnAcquireTicket"				
				android:layout_width="380px"
				android:layout_height="150px" 
				android:textSize="10pt"
				android:textColor="#000000"
				android:layout_marginTop="15dip"				
			/>
			
		<Button android:text="@string/btnVerifyTicket"
				android:id="@+id/btnVerifyTicket"
				android:layout_width="380px"
				android:layout_height="150px" 
				android:textSize="10pt"
				android:textColor="#000000"
				android:layout_marginTop="15dip"
			/>
			
	</LinearLayout>

</RelativeLayout>
